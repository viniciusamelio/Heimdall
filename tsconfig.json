{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es5",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "lib": ["esnext"],
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }